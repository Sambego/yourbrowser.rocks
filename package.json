{
  "name": "yourbrowser.rocks",
  "version": "1.0.0",
  "description": "I didn't know the browser could do that",
  "author": "Sambego <sambellen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:prod": "NODE_ENV=production rm -rf dist/ && webpack",
    "build:dev": "webpack-dev-server --content-base dist --inline --hot --progress",
    "git:pull:master": "git checkout master && git pull",
    "git:publish": "git push origin `git subtree split --prefix dist master`:gh-pages --force",
    "git:clean": "git fetch -p",
    "ghpages": "npm run git:pull:master && npm run build:prod && npm run git:publish && npm run git:clean",
    "lint": "eslint src/js",
    "test:jest": "jest",
    "rebuild:sass": "npm rebuild node-sass",
    "precommit": "npm run build:prod && git add dist/ && git commit -nm 'Add builded content to the dist/ folder.' --allow-empty && echo true"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "preact-css-transition-group": "^1.1.1",
    "proptypes": "^0.14.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.3.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-webpack-include-assets-plugin": "^0.0.3",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.1",
    "jest": "^18.1.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.0",
    "preact": "^7.2.0",
    "preact-render-to-string": "^3.5.0",
    "preact-router": "^2.4.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "svg-inline-loader": "^0.7.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  },
  "jest": {
    "coverageDirectory": "tests/__coverage__",
    "testPathDirs": [
      "tests"
    ],
    "globals": {},
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "<rootDir>/tests/__mocks__/style.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/__mocks__/file.js"
    }
  }
}
